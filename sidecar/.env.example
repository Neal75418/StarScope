# StarScope Sidecar Environment Configuration
# Copy this file to .env and fill in your values

# GitHub Personal Access Token (optional but recommended)
# Without this, GitHub API rate limit is 60 requests/hour
# With this, rate limit is 5000 requests/hour
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx

# Environment mode
# development = enables debug logging
# production = minimal logging
ENV=development

# Debug mode (enables hot reload)
# Set to "true" only in development
DEBUG=false

# Server port (default: 8008)
PORT=8008
